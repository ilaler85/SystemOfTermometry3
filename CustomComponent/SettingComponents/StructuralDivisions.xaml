<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SystemOfThermometry3.CustomComponent.Setting_components.StructuralDivisions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel x:Name="DataGridV">
        <StackPanel Margin="0,0,0,20" Orientation="Vertical">
            <TextBlock Margin="0,0,20,0" VerticalAlignment="Center" FontSize="16">Добавить структурное подразделение</TextBlock>
            <TextBox Name ="nameDivisions" Header="Название структурного подразделения" Text ="{Binding ElementName=listDivisions, Path=SelectedItem.ToString, Mode=TwoWay}" Width="500"/>
            <Button Name ="ButtonSave" Content="Сохранить" Click="ButtonSave_Click" VerticalAlignment="Center"/>
            <Button Name ="ButtonDelete" Content="Удалить" Click="ButtonDelete_Click" Visibility="Collapsed" />
        </StackPanel>

        <ListView Name ="listDivisions" ItemClick="ListView_ItemClick" ItemsSource="" >
            
        </ListView>
    </StackPanel>
</Page>
